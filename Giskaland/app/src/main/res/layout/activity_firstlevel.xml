<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bak1"
    tools:context="gl.giskaland.ChooseGameForAllLevels">

    <!-- Temporary text view -->
    <TextView
        android:id="@+id/tmpGamesText"
        android:text="@string/tmpGamesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/difficultyLevel1"
        android:paddingBottom="20dp"/>

    <TextView
        android:id="@+id/difficultyLevel1"
        android:text="@string/firstLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonMath"
        android:paddingBottom="20dp"/>

    <!-- Some games, example, no onclick -->

    <ImageButton
        android:id="@+id/buttonMath"
        style="@style/button_style"
        android:background="@android:color/transparent"
        android:src="@drawable/stae"
        android:paddingBottom="20dp"
        android:layout_above="@+id/buttonSpellThePic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/buttonSpellThePic"
        style="@style/button_style"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:src="@drawable/staf"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

</RelativeLayout>
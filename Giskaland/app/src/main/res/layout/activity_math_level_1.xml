<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bak1"
    tools:context="gl.giskaland.Math_level_1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBplusmin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plus"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBnum1"
        android:src="@drawable/one"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/IBplusmin"
        android:layout_toStartOf="@+id/IBplusmin"
        style="?android:attr/borderlessButtonStyle"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBnum2"
        android:src="@drawable/two"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/IBplusmin"
        android:layout_toEndOf="@+id/IBplusmin"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout1"
        android:src="@drawable/nine"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/IBnum1"
        android:layout_toStartOf="@+id/IBnum1"
        android:layout_marginRight="94dp"
        android:layout_marginEnd="94dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout2"
        android:src="@drawable/seven"
        android:layout_alignTop="@+id/IBout1"
        android:layout_alignLeft="@+id/IBnum1"
        android:layout_alignStart="@+id/IBnum1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout3"
        android:src="@drawable/six"
        android:layout_alignTop="@+id/IBout2"
        android:layout_toRightOf="@+id/IBplusmin"
        android:layout_toEndOf="@+id/IBplusmin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout4"
        android:src="@drawable/five"
        android:layout_alignTop="@+id/IBout3"
        android:layout_toRightOf="@+id/IBnum2"
        android:layout_toEndOf="@+id/IBnum2"
        android:layout_marginLeft="121dp"
        android:layout_marginStart="121dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/TextMathLevel1score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bak1"
    tools:context="gl.giskaland.Math_level_1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout1"
        android:src="@drawable/nine"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/TextMathLevel1score"
        android:layout_toEndOf="@+id/TextMathLevel1score" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout2"
        android:src="@drawable/seven"
        android:layout_alignTop="@+id/IBout4"
        android:layout_toLeftOf="@+id/IBout3"
        android:layout_toStartOf="@+id/IBout3"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout3"
        android:src="@drawable/six"
        android:layout_marginRight="172dp"
        android:layout_marginEnd="172dp"
        android:layout_alignTop="@+id/IBout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout4"
        android:src="@drawable/five"
        android:layout_alignTop="@+id/IBout1"
        android:layout_toLeftOf="@+id/imageViewONE"
        android:layout_toStartOf="@+id/imageViewONE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/TextMathLevel1score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewONE"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fiveballs"
        />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bakstae"
    tools:context="gl.giskaland.MathGame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IMG"
        android:src="@drawable/img_2_ring_3"
        android:background="@android:color/transparent"
        android:layout_marginRight="107dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="107dp"
        android:layout_below="@+id/TextMathLevel1score"
        android:layout_toLeftOf="@+id/IBout4"
        android:layout_toStartOf="@+id/IBout4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout1"
        android:src="@drawable/nine"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/IBout2"
        android:layout_toEndOf="@+id/IBout2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout2"
        android:src="@drawable/seven"
        android:background="@android:color/transparent"
        android:layout_marginRight="138dp"
        android:layout_marginEnd="138dp"
        android:layout_alignTop="@+id/IBout3"
        android:layout_toLeftOf="@+id/IMG"
        android:layout_toStartOf="@+id/IMG" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout3"
        android:src="@drawable/six"
        android:background="@android:color/transparent"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_alignTop="@+id/IBout4"
        android:layout_alignLeft="@+id/IMG"
        android:layout_alignStart="@+id/IMG" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout4"
        android:src="@drawable/five"
        android:background="@android:color/transparent"
        android:layout_marginRight="138dp"
        android:layout_alignTop="@+id/IBout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="138dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:typeface="monospace"
        android:id="@+id/TextMathLevel1score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>

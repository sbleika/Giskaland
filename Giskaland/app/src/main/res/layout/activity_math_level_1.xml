<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bak1"
    tools:context="gl.giskaland.Math_level_1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IMG"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_2_ring_3"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout1"
        android:src="@drawable/nine"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/IBnum1"
        android:layout_toStartOf="@+id/IBnum1"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="94dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout2"
        android:src="@drawable/seven"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout1"
        android:layout_alignRight="@+id/TextMathLevel1score"
        android:layout_alignEnd="@+id/TextMathLevel1score" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout3"
        android:src="@drawable/six"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout4"
        android:src="@drawable/five"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout2"
        android:layout_toRightOf="@+id/IMG"
        android:layout_toEndOf="@+id/IMG" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/TextMathLevel1score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>

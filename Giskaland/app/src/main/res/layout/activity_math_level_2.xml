<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bakstae"
    tools:context="gl.giskaland.MathGame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout1"
        android:src="@drawable/zero"
        android:layout_marginBottom="48dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="106dp"
        android:layout_marginStart="106dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/TextMathLevel1score"
        android:layout_toEndOf="@+id/TextMathLevel1score" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout2"
        android:src="@drawable/zero"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout1"
        android:layout_marginRight="142dp"
        android:layout_marginEnd="142dp"
        android:layout_toLeftOf="@+id/IBout3"
        android:layout_toStartOf="@+id/IBout3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout3"
        android:src="@drawable/zero"
        android:layout_alignTop="@+id/IBout2"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/IBout4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout4"
        android:src="@drawable/zero"
        android:layout_marginRight="151dp"
        android:layout_marginEnd="151dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/TextMathLevel2score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/QuestionText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
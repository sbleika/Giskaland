<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bs"
    tools:context="gl.giskaland.MathGame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout1"
        android:src="@drawable/zero"
        android:layout_marginBottom="98dp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="50dp"
        android:paddingLeft="85dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout2"
        android:src="@drawable/zero"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout1"
        android:layout_toRightOf="@+id/IBout1"
        android:layout_toEndOf="@+id/IBout1"
        android:paddingRight="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout3"
        android:src="@drawable/zero"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout2"
        android:layout_toRightOf="@+id/IBout2"
        android:layout_toEndOf="@+id/IBout2"
        android:paddingRight="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IBout4"
        android:src="@drawable/zero"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/IBout3"
        android:layout_toRightOf="@+id/IBout3"
        android:layout_toEndOf="@+id/IBout3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/TextMathLevel2score"
        android:background="@android:color/transparent"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/QuestionText"
        android:layout_marginTop="191dp"
        android:layout_below="@+id/TextMathLevel2score"
        android:layout_toRightOf="@+id/IBout1"
        android:layout_toEndOf="@+id/IBout1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/giskimynd1"
        android:layout_below="@+id/QuestionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/checkBox"
        android:layout_alignTop="@+id/IBout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
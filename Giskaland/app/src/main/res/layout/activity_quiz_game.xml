<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="gl.giskaland.QuizGame"
    android:background="@drawable/spellbak1"
    android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/score"
            android:id="@+id/TextQuizLevel3Score"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="463dp"
            android:layout_height="241dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/QuestionTextLvl3"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0.06"
            android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="296dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="300dp"
        android:paddingLeft="120dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, world."
            android:id="@+id/optaButton"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:background="@color/background_material_light"
            android:textSize="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/optbButton"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@color/background_material_light"
            android:textStyle="bold"
            android:textSize="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, world."
            android:id="@+id/optdButton"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@color/background_material_light"
            android:textStyle="bold"
            android:textSize="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/optcButton"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@color/background_material_light"
            android:textSize="45dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

    </LinearLayout>

</LinearLayout>

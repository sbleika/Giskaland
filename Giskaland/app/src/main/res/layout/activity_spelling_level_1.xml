<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bak1"
    tools:context="gl.giskaland.Spelling_level_1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IMGspelling"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/api"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpellingOut1"
        android:src="@drawable/sa"
        android:background="@android:color/transparent"
        android:layout_below="@+id/IMGspelling"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpellingOut2"
        android:src="@drawable/sb"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/SpellingOut1"
        android:layout_toLeftOf="@+id/IMGspelling"
        android:layout_toStartOf="@+id/IMGspelling" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpellingOut3"
        android:src="@drawable/sg"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/SpellingOut2"
        android:layout_toRightOf="@+id/IMGspelling"
        android:layout_toEndOf="@+id/IMGspelling" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpellingOut4"
        android:src="@drawable/sf"
        android:background="@android:color/transparent"
        android:layout_below="@+id/IMGspelling"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/TextMathLevel1score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>

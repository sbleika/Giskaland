<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bak1"
    tools:context="gl.giskaland.FirstLevel">

    <!-- Temporary text view -->
    <TextView
        android:id="@+id/tmpGamesText"
        android:text="@string/tmpGamesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:layout_marginTop="188dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Some games, example, no onclick -->

    <ImageButton
        android:id="@+id/buttonMathLevel3"
        android:text="@string/gameMath"
        style="@style/button_style"
        android:background="@android:color/transparent"
        android:layout_above="@+id/buttonMathLevel3"
        android:src="@drawable/stae"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="80dp" />

    <ImageButton
        android:id="@+id/buttonSpellThePicLevel3"
        android:text="@string/SpellThePicEnglish"
        style="@style/button_style"
        android:background="@android:color/transparent"
        android:src="@drawable/enska"
        android:layout_below="@+id/buttonMathLevel3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <ImageButton
        android:id="@+id/buttonBrainPuzzlelv3"
        android:text="@string/gameBrainPuzzle"
        style="@style/button_style"
        android:layout_below="@+id/buttonSpellThePicLevel3"
        android:background="@android:color/transparent"
        android:src="@drawable/gettunu"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" />
</RelativeLayout>